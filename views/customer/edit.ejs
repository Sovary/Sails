<div class="container-fluid">
	<form action="/customer/update/<%= customer.id %>" method="PUT" class="form">
		<h2>Create User</h2>
		<div class="form-group">
			<input type="text" name="name" placeholder="Name" class="form-control" value="<%= customer.name %>">
		</div>
		<div class="form-group">
			<input type="email" name="email" placeholder="email" class="form-control" value="<%= customer.email %>">
		</div>
		<div class="form-group">
			<input type="text" name="state" placeholder="state" class="form-control" value="<%= customer.state %>">
		</div>
		<div class="form-group">
			<input type="submit" value="Update" class="btn btn-primary">
		</div>
	</form>

</div>